<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="228.0" prefWidth="572.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.ml.controller.RootViewController">
    <AnchorPane prefHeight="300.0" prefWidth="500.0" VBox.vgrow="ALWAYS">
        <ComboBox fx:id="baseCurrency" layoutX="143.0" layoutY="102.0" prefHeight="25.0" prefWidth="126.0"
                  promptText="base currency"/>
        <ComboBox fx:id="quoteCurrency" layoutX="301.0" layoutY="102.0" prefHeight="25.0" prefWidth="126.0"
                  promptText="quote currency"/>
        <Button fx:id="convertButton" layoutX="430.0" layoutY="102.0" mnemonicParsing="false" onAction="#convert"
                prefHeight="25.0" prefWidth="114.0" text="Convert"/>
        <Label fx:id="message" alignment="CENTER" contentDisplay="CENTER" layoutX="-1.0" layoutY="127.0"
               prefHeight="101.0" prefWidth="572.0" textAlignment="CENTER"/>
        <TextField fx:id="amount" alignment="CENTER" layoutX="30.0" layoutY="102.0" prefHeight="25.0"
                   prefWidth="114.0" promptText="amount"/>
        <Label alignment="CENTER" layoutX="-1.0" prefHeight="101.0" prefWidth="572.0" text="Currency converter"
               textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="25.0"/>
            </font>
        </Label>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="269.0" layoutY="106.0" prefHeight="17.0"
               prefWidth="32.0" text="to" textAlignment="CENTER"/>
    </AnchorPane>
</VBox>
